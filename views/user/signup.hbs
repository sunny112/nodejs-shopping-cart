<div class="row">
	<div class="col-md-4 col-md-offset-4">
	<form action="/user/signup" method="POST" role="form">
		<legend>signup</legend>
		{{#if hasErrors}}
			<div class="alert alert-danger">
				{{#each messages}}
						<p>{{this}}</p>
				{{/each}}
			</div>
		{{/if}}


		<div class="form-group">
			<label for="email">email</label>
			<input type="text" class="form-control" id="email" name="email" placeholder="Please input your email" >
		</div>
		<div class="form-group">
			<label for="password">password(must contain at least 4 letter or number)</label>
			<input type="password" class="form-control" id="password" name="password" placeholder="Please input your password" >
		</div>
		 <input type = "hidden" class="form-control" name="_csrf" value="{{csrfToken}}"> 
		<div class="form-group">

		<button type="submit" class="btn btn-primary">Submit</button>
		
		</form>
	</div>

</div>